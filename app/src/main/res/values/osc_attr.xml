<resources>

    <!-- 比较常用的宽高 -->
    <style name="wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_fill">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="fill_wrap">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="fill_fill">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <!-- 横向线条 -->
    <style name="h_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:background">#ececec</item>
    </style>
    <!-- 纵向线条 -->
    <style name="v_line">
        <item name="android:layout_width">1dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">?attr/lineColor</item>
    </style>

    <style name="list_text_title" parent="@style/wrap_wrap">
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="list_text_info" parent="@style/wrap_wrap">
        <item name="android:textColor">?attr/infoTextColor</item>
        <item name="android:textSize">11sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <!-- Team菜单ImageView的样式 -->
    <style name="TeamMenuItemImageViewStyle">
        <item name="android:layout_width">32dip</item>
        <item name="android:layout_height">32dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginRight">15dip</item>
    </style>

    <!-- Team菜单TextView的样式 -->
    <style name="TeamMenuItemTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#333</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="team_issue_detail_line" parent="@style/h_line">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="team_issue_detail_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">18dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">?attr/layout_item_bg</item>
        <item name="android:gravity">center|left</item>
    </style>

    <style name="team_issue_detail_tip_fa" parent="@style/wrap_wrap">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="team_issue_detail_info_layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="team_issue_detail_tip" parent="@style/wrap_wrap">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>

    <style name="team_issue_detail_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">?attr/infoTextColor</item>
    </style>

    <style name="team_new_issue_layout" parent="@style/fill_wrap">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">?attr/layout_item_bg</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="team_new_issue_fa" parent="@style/wrap_wrap">
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="team_new_issue_tip" parent="@style/wrap_wrap">
        <item name="android:textColor">?attr/textColor</item>
    </style>

    <style name="team_new_issue_info" parent="@style/wrap_wrap">
        <item name="android:textColor">?attr/infoTextColor</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <!-- viewpage文本  滑动标签标题 -->
    <style name="viewpage_slidingTabTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/viewpage_selector_slide_title</item>
        <item name="android:textSize">17sp</item>
    </style>



    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension"/>
        <attr name="border_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="PagerSlidingTabStrip">
        <attr name="slidingBlock" format="reference|color"/>
        <attr name="allowWidthFull" format="boolean"/>
        <attr name="disableViewPager" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="RefreshLayout">
        <attr name="footer_view_background" format="color"/>
        <attr name="footer_view_text_color" format="color"/>
        <attr name="is_need_footer" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CirclePagerIndicator">
        <attr name="circle_indicator_centerHorizontal" format="boolean"/>
        <attr name="circle_indicator_follow" format="boolean"/>
        <attr name="circle_indicator_orientation" format="reference"/>
        <attr name="circle_indicator_color" format="color"/>
        <attr name="circle_indicator_stroke_color" format="color"/>
        <attr name="circle_indicator_stroke_width" format="dimension"/>
        <attr name="circle_indicator_fill_color" format="color"/>
        <attr name="circle_indicator_radius" format="dimension"/>
        <attr name="circle_indicator_space" format="dimension"/>
        <attr name="circle_indicator_indicator_radius" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="LinePagerIndicator">
        <attr name="line_indicator_centerHorizontal" format="boolean"/>
        <attr name="line_indicator_width" format="dimension"/>
        <attr name="line_indicator_height" format="dimension"/>
        <attr name="line_indicator_indicator_height" format="dimension"/>
        <attr name="line_indicator_space" format="dimension"/>
        <attr name="line_indicator_fill_color" format="color"/>
        <attr name="line_indicator_indicator_color" format="color"/>
        <attr name="line_indicator_follow" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="FlowLayout">
        <attr name="verticalSpace" format="dimension"/>
        <attr name="horizontalSpace" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="FlowImageLayout">
        <attr name="flow_vertical_space" format="dimension"/>
        <attr name="flow_horizontal_space" format="dimension"/>
    </declare-styleable>
</resources>
