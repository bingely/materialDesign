<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/pageerrLayout"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="?attr/layout_bg_normal">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/img_error_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pagefailed_bg"
                    android:visibility="gone"/>

                <LinearLayout
                    android:id="@+id/loading_progress"
                    android:layout_width="78dp"
                    android:layout_height="88dp"
                    android:layout_centerInParent="true"
                    android:background="#95b2d9"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">


                    <com.bingley.materialdesign.view.IosProgress
                        android:id="@+id/animProgress"
                        android:layout_width="46dip"
                        android:layout_height="46dip"/>

                    <TextView
                        android:id="@+id/tv_error_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10.0dip"
                        android:gravity="center"
                        android:lines="2"
                        android:text="@string/error_view_loading"
                        android:textColor="?attr/infoTextColor"
                        android:textSize="@dimen/font_14"/>

                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>