<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FFFFFF"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="1EditText带x功能，已经电话号码135 3768 8026"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号："/>

                <com.bingley.materialdesign.mvp.textview.ClearableEditText
                    android:id="@+id/phone"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:hint="请输入手机号"
                    android:inputType="number"
                    android:singleLine="true"/>

            </LinearLayout>

            <com.bingley.materialdesign.view.MyToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="45dp">

            </com.bingley.materialdesign.view.MyToggleButton>

            <com.bingley.materialdesign.mvp.textview.MyTextView
                android:layout_marginTop="45dp"
                android:padding="15dp"
                android:text="如果爱---textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </com.bingley.materialdesign.mvp.textview.MyTextView>

        </LinearLayout>

    </ScrollView>
</LinearLayout>