<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="53dp"
              android:orientation="vertical"
              android:layout_alignParentBottom="true"

    >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#b2b2b2">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_tab_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/iv_home"
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:background="@drawable/home"
                />

           <!-- <TextView
                android:id="@+id/tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="首页"
                android:textColor="@color/bottom_tv_unselected"
                android:textSize="12sp"
                />-->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tab_goods"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/iv_goods"
                android:layout_width="53dp"
                android:layout_height="53dp"

                android:background="@drawable/goods"
                />

           <!-- <TextView
                android:id="@+id/tv_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="优品"
                android:textColor="@color/bottom_tv_unselected"
                android:textSize="12sp"
                />-->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tab_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/post"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tab_circle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/iv_friend_circle"
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:background="@drawable/friend_circle"
                />

          <!--  <TextView
                android:id="@+id/tv_find"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="圈子"
                android:textColor="@color/bottom_tv_unselected"
                android:textSize="12sp"/>-->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tab_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/iv_me"
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:background="@drawable/me"
                />

            <!--<TextView
                android:id="@+id/tv_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="我的"
                android:textColor="@color/bottom_tv_unselected"
                android:textSize="12sp"/>-->
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
